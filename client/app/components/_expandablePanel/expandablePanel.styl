.expandablePanelSlider
  text-align: center
  position: relative
  border-top: 1px solid #ccc

.expandablePanelSlider button
  position: absolute
  top: -1em
  margin-left: -1em
  border-radius: 1em
  height: 2em
  width: 2em
  padding: 0.4em
  background-color: white
  border: 1px solid #ddd

.expandablePanelSlider:before
  display: block
  content: ""
  position: relative
  top: -1em
  height: 1em
  background-image: linear-gradient(0deg, #eee 0%, rgba(0,0,0,0) 100%)
  opacity: 1

.content
  overflow: hidden
  transition: max-height 1s

.expandable.expanded .content
  max-height: 1000em

.expandable.collapsed .content
  max-height: 4em

.expanded .expandablePanelSlider:before
  opacity: 0
