$borderGrey = #ccc

markdown-input
    .md-default-theme
        margin-top 0.5em
        margin-bottom 0.2em
    md-input-container
        width 100%
    .textarea-container
        border 1px solid $borderGrey
        background-color rgba(0, 0, 0, 0.03)
        padding 0.5em
        padding-bottom 0
    .preview
        margin-bottom 0
        background-color rgba(0, 0, 0, 0.03)
        span
            font-size 0.9em
    .help
        float right
        font-size 0.7em
        b, span, i
            padding .3em
        .md-icon-button
            margin 0 !important